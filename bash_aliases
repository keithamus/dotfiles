# ls
alias l='ls -CF'
alias la='l -a'
alias ll='l -l'
alias lla='l -la'

# less
alias less='less -R'

# grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# cd
alias ..='cd ..'
alias ...='cd ../..'
alias -- -='cd -'
alias cd..='cd ..'

# git (mostly typo fixes)
alias g='git'
alias gi='git'
alias gt='git'
alias tit='git'
alias gti='git'
alias cgit='git'
alias lgit='git'
alias giit='git'

# sublime
alias sublime='subl'
alias sub='subl'

# mkdir
alias mkdir='mkdir -p'

# get your external ip
alias ip='dig +short myip.opendns.com @resolver1.opendns.com'
